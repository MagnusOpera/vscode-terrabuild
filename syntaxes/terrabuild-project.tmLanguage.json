{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.terrabuild.project",
  "name": "Terrabuild Project",
  "fileTypes": [],
  "patterns": [
    { "include": "#project-blocks" },
    { "include": "source.terrabuild.lang" }
  ],
  "repository": {
    "project-blocks": {
      "patterns": [
        {
          "name": "meta.block.project",
          "begin": "\\b(project)\\s+(\\w+)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "variable.language" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#project-attributes" },
            { "include": "source.terrabuild.lang#generic-blocks" },
            { "include": "source.terrabuild.lang#function-calls" }
          ]
        },
        {
          "name": "meta.block.target",
          "begin": "\\b(target)\\s+(\\w+)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "variable.language" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#target-attributes" },
            { "include": "source.terrabuild.lang#generic-blocks" },
            { "include": "source.terrabuild.lang#function-calls" }
          ]
        },
        {
          "name": "meta.block.extension",
          "begin": "\\b(extension)\\s+(@?[a-zA-Z_][a-zA-Z0-9_-]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "variable.language" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#extension-attributes" },
            {
              "name": "meta.block.defaults",
              "begin": "\\b(defaults)\\s*\\{",
              "end": "\\}",
              "patterns": [
                { "include": "source.terrabuild.lang#maps" },
                { "include": "source.terrabuild.lang#lists" },
                { "include": "source.terrabuild.lang#function-calls" },
                { "include": "source.terrabuild.lang#identifiers" }
              ]
            }
          ]
        },
        {
          "name": "meta.block.locals",
          "begin": "\\b(locals)\\s*\\{",
          "end": "\\}",
          "patterns": [
            { "include": "source.terrabuild.lang#maps" },
            { "include": "source.terrabuild.lang#lists" },
            { "include": "source.terrabuild.lang#function-calls" },
            { "include": "source.terrabuild.lang#identifiers" }
          ]
        }
      ]
    },
    "project-attributes": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "\\b(depends_on|dependencies|outputs|ignores|includes|labels)\\b(?=\\s*=)"
        }
      ]
    },
    "target-attributes": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "\\b(rebuild|outputs|depends_on|cache|managed)\\b(?=\\s*=)"
        }
      ]
    },
    "extension-attributes": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "\\b(container|platform|variables|script|defaults)\\b(?=\\s*=)"
        }
      ]
    }
  }
}
